    ViewData["Title"] = "Edit";
}
<h1>Edit</h1>

<h4>Cliente</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
           <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <input type="hidden" asp-for="Cliente.Id"/>
           <div class="form-group">
               <label asp-for="Cliente.Name" class="control-label"></label>
               <input asp-for="Cliente.Name" class="form-control"/>
               <span asp-validation-for="Cliente.Name" class="text-danger"></span>
           </div>
           <div class="form-group">
                <label asp-for="Cliente.Phone" class="control-label"></label>
                <input asp-for="Cliente.Phone" class="form-control" />
                <span asp-validation-for="Cliente.Phone" class="text-danger"></span>
           </div>
            <div class="form-group">
                <label asp-for="Cliente.Email" class="control-label"></label>
                <input asp-for="Cliente.Email" class="form-control" />
                <span asp-validation-for="Cliente.Email" class="text-danger"></span>
           </div>
            <div class="form-group">
                <label asp-for="Cliente.Address" class="control-label"></label>
                <input asp-for="Cliente.Address" class="form-control" />
                <span asp-validation-for="Cliente.Address" class="text-danger"></span>
           </div>
            <div class="form-group">
                <label asp-for="Cliente.City" class="control-label"></label>
                <input asp-for="Cliente.City" class="form-control" />
                <span asp-validation-for="Cliente.City" class="text-danger"></span>
           </div>
           <div class="form-group">
               <input type="submit" value="Save" class="btn btn-success"/>
               <a asp-page="./Index" class="btn btn-primary">Back to List</a>
           </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

